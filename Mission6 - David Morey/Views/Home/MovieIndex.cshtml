@{
}

@model List<Movies>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To:</td>
            <td>Copied To Plex?</td>
            <td>Notes</td>
        </tr>
    </thead>

    @foreach (var m in Model)
    {
        <tbody>
            <tr>
@*                 <td>@m.CategoryName</td> *@
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                <td>@m.Edited</td>
                <td>@m.LentTo</td>
                <td>@m.CopiedToPlex</td>
                <td>@m.Notes</td>

                <td class="btn btn-check"><a>Edit</a></td>
                <td class="btn btn-outline-danger"><a>Remove</a></td>
            </tr>
        </tbody>
    }
</table>