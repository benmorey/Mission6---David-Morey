@* The following code displays a deletion screen before an item is deleted' *@

@model Movies

<div class="text-center">
    <h1>Are you sure you want to delete this record?</h1>
    <br />
    <h3>Title: <i>@Model.Title</i></h3>
    <h3>Year Made: <i>@Model.Year</i></h3>
    <br/>
    <form method="post">
        <input asp-for="MovieID" type="hidden" />
        <button class="btn btn-outline-danger" type="submit">Delete</button> @*This button deletes the row*@
        <a class="btn btn-outline-info" asp-controller="Home" asp-action="MovieIndex">Cancel</a> @*This button cancels the deletion*@
    </form>
</div>
